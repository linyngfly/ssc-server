{
  "appenders": {
    "console": {
      "type": "console"
    },
    "file": {
      "type": "file",
      "filename": "${opts:base}/logs/con-log-${opts:serverId}.log",
      "maxLogSize": 10485760,
      "layout": {
        "type": "basic"
      },
      "backups": 50
    },
    "con-log": {
      "type": "file",
      "filename": "${opts:base}/logs/con-log-${opts:serverId}.log",
      "pattern": "connector",
      "maxLogSize": 10485760,
      "layout": {
        "type": "basic"
      },
      "backups": 50,
      "category": "con-log"
    }
  },
  "categories": {
    "default": {
      "appenders": ["file", "console"],
      "level": "error"
    }
  },
  "lineDebug": true
}